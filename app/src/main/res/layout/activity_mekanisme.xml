<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MekanismeActivity"
    android:background="@drawable/bg3">

    <ImageView
        android:id="@+id/btnBackMekanisme"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/btn_back"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/txtJudulMekanismeFix"
            android:layout_width="@dimen/_475sdp"
            android:layout_height="@dimen/_22sdp"
            android:src="@drawable/jdl_mekanisme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <TextView
            android:id="@+id/txtJudulMekanisme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comforta_bold"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Perhatikan percobaan berikut!"
            android:textColor="#2d2d2d"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintTop_toBottomOf="@+id/txtJudulMekanismeFix" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_220sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtJudulMekanisme">


            <ImageView
                android:id="@+id/imgMekanismePernapasan"
                android:layout_width="@dimen/_300sdp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/_175sdp"
            android:layout_height="@dimen/_130sdp"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout3"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout3"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout3">

            <TextView
                android:id="@+id/txtPenjelasanMekanisme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ket."
                android:textColor="#2d2d2d"
                android:layout_marginLeft="@dimen/_20sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtPenjelasanMekanisme2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balon Kuning = Paru-paru"
                android:textColor="#2d2d2d"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="@+id/txtPenjelasanMekanisme"
                app:layout_constraintTop_toBottomOf="@+id/txtPenjelasanMekanisme" />

            <TextView
            android:id="@+id/txtPenjelasanMekanisme3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balon Ungu = Diafragma"
            android:textColor="#2d2d2d"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintStart_toStartOf="@+id/txtPenjelasanMekanisme2"
            app:layout_constraintTop_toBottomOf="@+id/txtPenjelasanMekanisme2" />




        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/btnPreviousMekanisme"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_45sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:src="@drawable/btn_backpage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView

        android:id="@+id/btnNextMekanisme"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_45sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:src="@drawable/btn_nextpage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imgBtn_sound_off"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/sound_off"
        app:layout_constraintBottom_toTopOf="@+id/btnNextMekanisme"
        app:layout_constraintStart_toEndOf="@+id/btnNextMekanisme" />

    <ImageView
        android:id="@+id/imgBtn_sound"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/sound_on"
        app:layout_constraintBottom_toTopOf="@+id/btnNextMekanisme"
        app:layout_constraintStart_toEndOf="@+id/btnNextMekanisme" />



</androidx.constraintlayout.widget.ConstraintLayout>